@model Candidate

@{
    ViewBag.Title = "success";
    Layout = "_Layout";
}

<div>
    <h3 class="display-4">Congratulations @Model.FullName</h3>
    <p class="lead">Your application has <mark>submitted.</mark></p>
    <p class="lead">Thanks for your interest.</p>
    <hr/>
    <blockquote class="blockquote">
        You have enrolled to @Model.SelectedCourse course.
    </blockquote>
    <hr/>
    <p class="text-muted">You applied at @Model.ApplyAt.</p>
    
    <div class="btn-group">
        <a class="btn btn-success" asp-controller="Course" asp-action="Index">Applications</a>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</div>