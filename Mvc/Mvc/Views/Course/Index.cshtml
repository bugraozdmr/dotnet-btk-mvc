@model IEnumerable<Candidate>

@if (Model.Count() > 0)
{
    <h6 class="display-6">Applications(@Model.Count())</h6>
    
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Full Name</th>
            <th>Course</th>
            <th>Applied At</th>
            <th>email</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.SelectedCourse</td>
                <td>@item.ApplyAt</td>
                <td>@item.email</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert-info">
        There is no application.Please <a asp-controller="Course" asp-action="Apply" style="text-decoration: none">click</a> for application
    </div>
}