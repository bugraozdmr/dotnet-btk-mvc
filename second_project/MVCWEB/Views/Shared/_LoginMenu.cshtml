@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Dashboard" target="_blank">Admin</a>
    </li>   
}

@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link"
           aria-current="page"
           asp-area="" 
           asp-action="Logout"
           asp-route-returnUrl="@Context.Request.PathAndQuery()"
           asp-controller="Account">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link"
           aria-current="page"
           asp-area="" 
           asp-action="Login" 
           asp-route-returnUrl="@Context.Request.PathAndQuery()"
           asp-controller="Account">Login</a>
    </li>   
}