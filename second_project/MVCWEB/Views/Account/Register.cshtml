@model RegisterDto

<div class="container my-4">

    <h4 class="display-6 text-center">
        <i class="fa fa-user-plus" aria-hidden="true"></i>
        <br>
        Register
    </h4>
    <!-- Pills content -->
    <div class="tab-content">
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <div class="text-danger" style="list-style: none" asp-validation-summary="All"></div>
      
            <form method="post" asp-action="Register">
                <!-- Email input -->
                <div class="row">
                    <div class="col">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" placeholder="First name" asp-for="FirstName">
                    </div>
                    <div class="col">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" placeholder="Last name" asp-for="LastName">
                    </div>
                </div>
                
                
                <div class="form-outline">
                    <label class="form-label">Email</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="email"/>
                </div>
                
                <div class="form-outline">
                    <label class="form-label">Username</label>
                    <input type="text" asp-for="Username" class="form-control" placeholder="Username"/>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password"/>
                </div>
                

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Register</button>

                <!-- Register buttons -->
                <div class="text-center">
                    <!-- asp route vermezsek hata alÄ±yor -->
                    <p>Already have an account ? <a asp-action="Login" asp-controller="Account" asp-route-ReturnUrl="/">Login</a></p>
                </div>
            </form>
        </div>
    </div>
</div>