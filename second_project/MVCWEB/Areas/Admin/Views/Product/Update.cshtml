@model ProductDtoForUpdate

@{
    ViewData["Title"] = "Update - " +  @Model.ProductName;
}

<div class="text-center">
    <div class="display-6 my-3">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">
    
    <div class="text-danger" asp-validation-summary="All"></div>
    
    <div class="form-group my-3">
        <label class="my-2" asp-for="categoryId"></label>
        <select class="form-control my-3"
                asp-items="@ViewBag.Categories" asp-for="categoryId">
        </select>
    </div>
    
    <input type="hidden" asp-for="Id" />
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input type="text" class="form-control" asp-for="ProductName" placeholder="Enter Product Name">
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input type="text" class="form-control" asp-for="Price" placeholder="Enter Price">
    </div>
    
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input type="text" class="form-control" asp-for="Summary" placeholder="Enter Summary">
    </div>
    
    <div class="form-group my-3">
        <img width="100" height="100" class="rounded shadow" src="@Model?.ImageUrl"/>
    </div>
    
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input type="file" class="form-control" name="file">
    </div>
    
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" asp-for="Showcase">
      <label class="form-check-label" asp-for="Showcase">Showcase</label>
    </div>

    <!-- burda check olabilirdi ama onu kayÄ±t almada sor -->

    <div class="form-group my-3">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i>
                Update
            </button>

            <a asp-action="Delete" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-danger mx-2" style="text-decoration: none">
                <i class="fa fa-trash"></i>
                Delete
            </a>
            
            <a asp-action="Index" asp-controller="Product" class="btn btn-warning mx-2" style="text-decoration: none">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>

    </div>
</form>