@model Product

@{
    ViewData["Title"] = "Update";
}

<div class="text-center">
    <div class="display-6 my-3">Create</div>
</div>

<form method="post" asp-action="Update">
    
    <div class="text-danger" asp-validation-summary="All"></div>
    
    <input type="hidden" asp-for="Id" />
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input type="text" class="form-control" asp-for="ProductName" placeholder="Enter Product Name">
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input type="text" class="form-control" asp-for="Price" placeholder="Enter Price">
    </div>

    <!-- burda check olabilirdi ama onu kayÄ±t almada sor -->

    <div class="form-group my-3">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i>
                Update
            </button>

            <a asp-action="Delete" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-danger mx-2" style="text-decoration: none">
                <i class="fa fa-trash"></i>
                Delete
            </a>
            
            <a asp-action="Index" asp-controller="Product" class="btn btn-warning mx-2" style="text-decoration: none">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>

    </div>
</form>