@{
    // belli bir layout çekiyor artık areas içinden -- viewimports viewstart view içinde shared dışında olmalı
    Layout = "_Layout";
}

@model IEnumerable<Category>

<div class="text-center my-5 border-bottom">
    <div class="display-6">Categories</div>
</div>

<ul class="list-group my-5">
    @foreach (var cat in Model)
    {
        <li class="list-group-item">@cat.CategoryName</li>
    }
</ul>