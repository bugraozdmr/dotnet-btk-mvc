@model IEnumerable<User>

@{
    ViewBag.Title = "Users";
}

<div class="text-center my-3">
    <div class="display-6">Users</div>
</div>


<div class="d-flex justify-content-end my-2">
    <a class="btn btn-outline-secondary" asp-action="Create" asp-controller="User">
        <i class="fa fa-plus"></i>
        Create
    </a>
</div>

<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Roles</th>
        <th>Operations</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.UserName</td>
            <td user-name="@user.UserName" user-role=""></td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-sm btn-warning rounded-0" asp-action="Update" asp-route-id="@user.UserName">Edit</a>
                    <a class="btn btn-sm btn-primary rounded-0" asp-action="ResetPassword" asp-route-id="@user.UserName">Reset Password</a>
                    <a class="btn btn-sm btn-danger rounded-0">
                        <form method="post" asp-action="DeleteUser">
                            <input type="hidden" name="Username" value="@user.UserName"/>
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                                Delete
                            </button>
                        </form>
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>