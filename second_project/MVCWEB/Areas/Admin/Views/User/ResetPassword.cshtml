@model ResetPasswordDto

@{
    ViewBag.Title = "Reset Password";
}

<div class="text-center my-3">
    <div class="display-6">Reset Password (@Model?.Username)</div>
</div>

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="ResetPassword">
    <input type="hidden" asp-for="Username"/>
    
    <div class="form-group my-3">
        <label asp-for="Password"></label>
        <input  asp-for="Password" class="form-control"></input>
    </div>
    
    <div class="form-group my-3">
        <label asp-for="ConfirmPassword"></label>
        <input  asp-for="ConfirmPassword" class="form-control"></input>
    </div>
    
    <div class="btn-group">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-key"></i>
            Update
        </button>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa fa-users"></i>
            Users
        </a>
    </div>
</form>